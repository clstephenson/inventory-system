<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.MainController">
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Inventory Management System" HBox.hgrow="NEVER" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="exitButton" mnemonicParsing="false" stylesheets="@../css/styles.css" text="Exit" HBox.hgrow="NEVER" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <HBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="356.0" prefWidth="800.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Parts" HBox.hgrow="NEVER" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="partSearchTextField" />
                        <Button fx:id="partSearchButton" mnemonicParsing="false" text="Search" HBox.hgrow="NEVER" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </HBox>
                  <TableView fx:id="partsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn editable="false" prefWidth="75.0" text="Part ID" />
                      <TableColumn editable="false" prefWidth="75.0" text="Part Name" />
                        <TableColumn editable="false" prefWidth="75.0" text="Inventory Level" />
                        <TableColumn editable="false" prefWidth="75.0" text="Price/Cost per Unit" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="addPartButton" mnemonicParsing="false" text="Add" HBox.hgrow="NEVER" />
                        <Button fx:id="modifyPartButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Modify" HBox.hgrow="NEVER" />
                        <Button fx:id="deletePartButton" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" text="Delete" HBox.hgrow="NEVER" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="356.0" prefWidth="800.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Products" HBox.hgrow="NEVER" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField fx:id="productSearchTextField" />
                        <Button fx:id="productSearchButton" mnemonicParsing="false" text="Search" HBox.hgrow="NEVER" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </HBox>
                  <TableView fx:id="productsTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn editable="false" prefWidth="75.0" text="Product ID" />
                        <TableColumn editable="false" prefWidth="75.0" text="Product Name" />
                        <TableColumn editable="false" prefWidth="75.0" text="Inventory Level" />
                        <TableColumn editable="false" prefWidth="75.0" text="Price per Unit" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="addProductButton" mnemonicParsing="false" text="Add" HBox.hgrow="NEVER" />
                        <Button fx:id="modifyProductButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Modify" HBox.hgrow="NEVER" />
                        <Button fx:id="deleteProductButton" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" text="Delete" HBox.hgrow="NEVER" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
